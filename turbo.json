{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build":{
            "dependsOn": ["^build"],
            "outputs": ["dist/**", "lib/**"]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "preview": {
            "cache": false,
            "dependsOn": ["build"],
            "persistent": true
        }
    }
}